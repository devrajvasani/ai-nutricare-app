# Application
APP_NAME=AI-NutriCare
APP_ENV=development
APP_DEBUG=true
APP_HOST=localhost
APP_PORT=8501

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nutricare_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# File Storage
UPLOAD_DIR=uploads
MAX_FILE_SIZE_MB=20
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,tiff,bmp

# OCR Configuration
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe
OCR_LANGUAGE=eng
OCR_ENGINE=tesseract

# Logging 
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_ROTATION=10 MB
LOG_RETENTION=30 days